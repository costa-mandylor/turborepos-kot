{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "yarn with-env:dev turbo run dev",
    "with-env:dev": "dotenv -e .env.local --",
    "with-env:prd": "dotenv -e .env.production --",
    "with-env:stg": "dotenv -e .env.staging --",
    "clean": "turbo run clean",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "lint": "turbo lint",
    "lint-staged-husky": "lint-staged --no-stash",
    "commit": "git-cz",
    "test": "turbo test -- --coverage",
    "tsc": "turbo tsc",
    "prepare": "husky install",
    "destroy": "rm -rf node_modules && npm exec --workspaces -- npx rimraf node_modules dist .next .turbo .cache && npx rimraf node_modules dist .next .turbo .cache"
  },
  "dependencies": {
    "@growthbook/growthbook-react": "^0.13.0",
    "@storybook/addon-a11y": "^6.5.15",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/client-api": "^6.5.16",
    "@storybook/jest": "^0.0.10",
    "@storybook/testing-library": "^0.0.13"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-interactions": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/builder-webpack5": "6.5.16",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/react": "6.5.16",
    "@storybook/theming": "6.5.16",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "commitizen": "4.3.0",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "pretty-quick": "3.1.3",
    "shx": "0.3.4",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsup": "6.6.3",
    "turbo": "^1.6.1"
  },
  "packageManager": "yarn@1.22.19"
}
