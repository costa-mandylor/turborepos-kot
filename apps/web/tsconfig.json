{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": [".", ".eslintrc.js", ".storybook/**/*"],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo",
    "coverage",
    "dist",
    "compiled",
    "build-next-static",
    "build-storybook-static"
  ]
}
